 <!-- Center Container -->
 <div class="center-container">
    <!-- Story Bar -->
    <div class="story-bar">
        <!-- Add New Story -->
        <div class="add-story" data-toggle="modal" data-target="#createStoryModal">
            <i class="fas fa-plus" id="openModalBtn"></i> 
        </div>
        <!-- User Stories -->
        <div class="story">
            <img src="https://placekitten.com/60/60" alt="User 1">
        </div>
        <div class="story">
            <img src="https://placekitten.com/60/61" alt="User 2">
        </div>
        <div class="story">
            <img src="https://placekitten.com/60/62" alt="User 3">
        </div>

        
        <!-- Add more stories as needed -->
    </div>
</div>

<!-- Create Story Modal -->
<div class="modal fade" id="createStoryModal" tabindex="-1" role="dialog" aria-labelledby="createStoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createStoryModalLabel">Create a New Story</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Choose the type of story you want to create:</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="storyType" id="textStory" value="text">
                    <label class="form-check-label" for="textStory">
                        Text Only
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="storyType" id="imageStory" value="image">
                    <label class="form-check-label" for="imageStory">
                        Image
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="createStoryBtn">Create Story</button>
            </div>
        </div>
    </div>
</div>
    